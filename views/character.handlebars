<div class="character-card">
  <div class="character-card-header">
    <p class="card-header">{{name}}</p>
    <p class="card-text">{{health}}</p>
    <p class="card-text">{{damage}}</p>
    <p class="card-text">{{race}}</p>
    <p class="card-text">{{class.name}}</p>
    <p class="card-text">Created by: {{user.name}}</p>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Character:</h3>

    <form class="form new-character-form">
      <div class="form-group">
        <label for="character-name">Character Name:</label>
        <input class="form-input" type="text" id="character-name" name="character-name" />
      </div>
      <div class="form-group">
        <label for=""></label>
      </div>
    </form>
  </div>

</div>